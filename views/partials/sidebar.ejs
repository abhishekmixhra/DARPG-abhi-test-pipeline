<style>
    .das_navbar {
        background: var(--sky-color) !important;
        border-radius: 30px !important;
    }

    .das_logo {
        background: rgba(245, 250, 252, 1);
        color: var(--sky-color) !important;
        padding: 0.5rem 1.5rem !important;
        font-weight: 700;
        border: none;
        border-radius: 5px;
        font-size: 14px;
    }

    .das_h40{
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .das_navbar_nav .nav-item{
        border-radius: 15px;
    }

    .das_navbar_nav .nav-link {
        color: var(--white) !important;
        font-weight: 600;
        padding: 0.75rem 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        border-radius: 15px;
    }

    .das_navbar_nav .nav-link:hover {
        background: rgba(255, 255, 255, 0.1);
        color: var(--sky-color) !important;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
    }

    .das_navbar_nav .nav-link.active {
        background: rgba(255, 255, 255, 0.2);
        color: var(--sky-color) !important;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
    }

    .das_navbar_nav .nav-link i {
        margin-right: 10px;
        color: var(--white) !important;
    }
    .das_navbar_nav .nav-link:hover i {
        color: var(--sky-color) !important;
    }
    .das_navbar_nav .nav-link.active i {
        color: var(--sky-color) !important;

    }


    .bg-surface-primary {
        background: #f8f9fa;
    }

    .shadow {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .has-search .form-control {

    padding: 0.5rem 1.25rem 0.5rem 2.375rem !important;
    border-radius: 35px !important;
    }

    .has-search .form-control-feedback {
    position: absolute;
    z-index: 2;
    display: block;
    width: 2.375rem;
    height: 2.375rem;
    line-height: 2.375rem;
    text-align: center;
    pointer-events: none;
    color: #aaa;
    
    }


    .das_card{
        background: var(--white);
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
    }

    .mtop{
        margin-top: 75px;
        margin-bottom: 60px;
    }

    .card_img{
        background: var(--sky-color);
        width: 90px;
        height: 90px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-top: -50px;
    }

    .card_img img{
        width: 90%;
        padding: 10px;
    }

    .p20{
        padding: 20px 20px 0 20px;
    }
    .p10{
        padding: 10px 20px;
    }
    .card_txt{
        margin-top: 20px;
    }

    .card_txt p{
        font-size: 18px;
        font-weight: 500;
        color: #000;
        height: 50px;
    }

    .card_txt h2{
        font-size: 50px;
        color: #000;
        font-weight: 700;
    }

    .hline{
        width: 100%;
        height: 3px;
        background: var(--sky-color);
    }

    .card_rating{
        font-size: 20px;
        color: rgba(70, 228, 72, 1);

    }
    .das_table{
        border: 1px solid #aaa;
        padding: 5px;
        border-radius: 10px;
        margin: 20px 0;
    }
    .navbar-vertical .navbar-nav .nav-link i, .navbar-vertical .navbar-nav .nav-link svg {
        min-width: 1.2rem;
    }
</style>

